@model List<OrderModel>

<h2>@ViewBag.Message</h2>
<table class="table">
    <thead>
        <tr>
          <th>Date</th>
          <th>Location</th>  
          <th>Cost</th>                              
        </tr>
    </thead>
    <tbody>
@if(Model != null)
{
  @foreach (var item in @Model) {
    <tr>
      <td>
        @DateTime.Now.ToString("dd/MM/yyyy")
      </td>
      <td>
        @item.Store.location
      </td>
      <td>
        @item.cost
      </td>
    </tr>
  }
}
else
{
      <tr>
      <td>
        "N/A"
      </td>
      <td>
        "N/A"
      </td>
      <td>
        "N/A"
      </td>
    </tr>
}
  </tbody>
</table>

<a href="/order/SelectStore" class="btn btn-primary btn-lg" role="button">Begin your order</a>