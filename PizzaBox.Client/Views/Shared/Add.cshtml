@model PizzaBox.Client.Models.PizzaModel

@*Use HTML Helpers to make drop downs of crust, size, and pizzas*@

<h2>Create Your Pizza</h2>

<form action = "/Order/add" method = "post">
  @Html.AntiForgeryToken()

  <select asp-for="@Model.Crust">
    @foreach(var item in @Model.CrustList)
    {
      <option value="@item.Name">@item.ToString()</option>
    }
  </select>

  <select asp-for="@Model.Size">
    @foreach(var item in @Model.SizeList)
    {
      <option value="@item.Name">@item.ToString()</option>
    }
  </select>

  <button type = "submit">Add Pizza</button>

</form>